{
  "branches": [
    "MC1.18.2"
  ],
  "tagFormat": "v${version}-MC1.18.2",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Server Redstone Block Changelog",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "forge/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "ServerRedstoneBlock-forge-${nextRelease.gitTag}.jar",
            "label": "ServerRedstoneBlock-forge-${nextRelease.gitTag}.jar"
          },
          {
            "path": "fabric/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "ServerRedstoneBlock-fabric-${nextRelease.gitTag}.jar",
            "label": "ServerRedstoneBlock-fabric-${nextRelease.gitTag}.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ]
  ]
}
